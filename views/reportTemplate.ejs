    body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 20px;
  background-color: white;
}
.header {
  text-align: center;
  margin-bottom: 20px;
  background-color: white;
  color: rgb(8, 0, 0);
  padding: 20px;
  border-radius: 10px;
}
.header img {
  width: 100px;
}
.header h1 {
  margin: 10px 0;
  font-size: 24px;
}
.header p {
  margin: 5px 0;
  font-size: 14px;
}
table {
  width: 100%;
  /* border-collapse: collapse; */
  margin-bottom: 20px;
  background-color: white;
  border-radius: 10px;
  overflow: hidden;
  border: 1px solid #ddd; /* Add border to the table */
  /* border-bottom: 1px solid #ddd; Add border to the table */
}
th, td {
  padding: 12px;
  text-align: left;
  border: 1px solid #ddd; /* Ensure all cells have borders */
}
th {
  background-color: white;
  color: black;
}
tr:nth-child(even) {
  background-color: white;
}
.comment-container {
  border: 1px solid #ddd; /* Border for the entire container */
  /* padding: 10px; Padding inside the container */
  margin-top: 5px; /* Spacing above the container */
  background-color: white; /* Background color */
  border-radius: 10px; /* Rounded corners */
}

.comment-box {
  margin-top: 10px; /* Spacing between the heading and the comment box */
  border-top: 1px solid #ddd;
  border-width: 100%;
  padding: 5px;
}

.comment-box p {
  margin: 0; /* Remove default margin for the paragraph */
  font-size: 14px; /* Font size for the comment */
}

.teacher-name {
  text-align: right; /* Align the teacher's name to the right */
  font-size: 14px; /* Font size for the teacher's name */
  margin-top: 5px; /* Spacing between the comment and the teacher's name */
  margin-bottom: 2px;
}
h2, h3 {
  color: black;
}
h2 {
  font-size: 20px;
  margin-bottom: 15px;
}
h3 {
  font-size: 18px;
  margin-bottom: 2px;
}
  </style>
</head>
<body>
  <div class="header">
    <img src="<%= logoPath %>" alt="School Logo">
    <h1>CHIZZY KIDS GROUP OF SCHOOL, SHIBIRI</h1>
    <p>26 Ichie Dara Street, Opposite pako, by Agogo Close, shibiri bus/stop, Lagos state</p>
    <p>Tel: 08060540369 | Email: info@chizzykids.edu.ng</p>
  </div>

  <h2>TERMLY REPORT FOR THE <%= term.termName.toUpperCase() %> <%= term.session.sessionName.toUpperCase() %> ACADEMIC SESSION</h2>

  <table>
    <tr>
      <td><strong>Student Name:</strong> <%= student.fullname %></td>
      <td><strong>Date of Birth:</strong> <%= student.dateOfBirth.toLocaleDateString() %></td>
      <td><strong>Total Score:</strong> <%= totalScore %></td>
    </tr>
    <tr>
      <td><strong>Class Teacher:</strong> <%= teacherName %></td>
      <td><strong>Class:</strong> <%= student.classroom.className %></td>
      <td><strong>Average Score:</strong> <%= averageScore %></td>
    </tr>
    <tr>
      <td><strong>Total Days:</strong> <%= totalDays %></td>
      <td><strong>Present Days:</strong> <%= presentDays %></td>
      <td><strong>Grade:</strong> <%= overallGrade %></td>
    </tr>
  </table>

  <table>
    <thead>
      <tr>
        <th>Subject</th>
        <th>CA1</th>
        <th>CA2</th>
        <th>Exam</th>
        <th>Total</th>
        <th>Grade</th>
        <th>Remark</th>
      </tr>
    </thead>
    <tbody>
      <% marks.forEach((mark) => { %>
      <tr>
        <td><%= mark.subject.name %></td>
        <td><%= mark.firstAssessment %></td>
        <td><%= mark.secondAssessment %></td>
        <td><%= mark.exam %></td>
        <td><%= mark.total %></td>
        <td><%= mark.grade %></td>
        <td><%= mark.remark %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="comment-container">
    <h3>Teacher's Comment</h3>
    <div class="comment-box">
      <p><%= teacherComment %></p>
      <div class="teacher-name"><strong><%= teacherName %></strong></div>
    </div>
  </div>

</body>
</html>